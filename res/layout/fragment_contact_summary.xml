<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FCFCFC"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/accentColor"
        android:textSize="16sp"
        android:text="KeyWords" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/keywordTexts"
        android:textColor="@color/darkColor"
        android:textSize="24sp"
        android:paddingTop="8dp"
        android:lineSpacingExtra="4dp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/sendToWearable"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="right"
            android:background="@drawable/send_to_wear_button"
            android:textColor="#444444"
            android:text="Send to Android wear" />
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/accentColor"
        android:textSize="16sp"
        android:paddingTop="16dp"
        android:text="Photos" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:textColor="@color/darkColor"
        android:textSize="24sp"
        android:paddingTop="8dp"
        android:layout_marginLeft="-16dp"
        android:layout_marginRight="-32dp"
        android:lineSpacingExtra="4dp"
        android:text="Photos come here" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/accentColor"
        android:textSize="16sp"
        android:paddingTop="16dp"
        android:text="Next meeting" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/darkColor"
        android:textSize="24sp"
        android:paddingTop="8dp"
        android:lineSpacingExtra="4dp"
        android:text="13pm today at Marcals Hogelacho St." />
</LinearLayout>